CREATE TABLE "HR"."NOTICE" 
   (	"BOARDNUM" NUMBER(38,0), 
	"TITLE" VARCHAR2(100), 
	"CONTENT" VARCHAR2(100), 
	"WRITER" VARCHAR2(100), 
	"WRITEDATE" DATE, 
	"RECOMMEND" NUMBER(38,0), 
	"VIEW_COUNT" NUMBER(38,0)
   )
   
-- 주석은 한칸 띄워야됨 꼭
   
CREATE TABLE "HR"."RECOMMEND"
	(	"re_no" NUMBER(38,0),
	"TITLE" VARCHAR2(100),
	"CONTENT" VARCHAR2(100),
	"WRITER" VARCHAR2(100)	
	)
	
DROP TABLE "HR"."RECOMMEND" -- 테이블 삭제

CREATE TABLE "HR"."BOARD3" 
   (	"BOARDNUM" NUMBER(38,0), 
	"TITLE" VARCHAR2(100), 
	"CONTENT" VARCHAR2(100), 
	"WRITER" VARCHAR2(100), 
	"WRITEDATE" DATE, 
	"RECOMMEND" NUMBER(38,0), 
	"VIEW_COUNT" NUMBER(38,0)
   )
	
ALTER TABLE BOARD3 MODIFY WRITER VARCHAR2(200)

ALTER TABLE BOARD3 DROP COLUMN VIEW_COUNT

ALTER TABLE BOARD3 ADD TEST2 VARCHAR(100)

